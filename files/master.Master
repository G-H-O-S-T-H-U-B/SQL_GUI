                            </ul>
                        </li>
                        <!-- DELETE TABLE LINK -->
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2" href="#" data-bs-toggle="collapse" data-bs-target="#delTblSubMenu" aria-expand="false" aria-controls="delTblSubMenus">Button 3</a>
                            <ul id="delTblSubMenu" class="collapse list-unstyled mb-0">
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-4 py-2" >Link 1</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-4 py-2">Link 2</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-4 py-2">Link 3</a>
                                </li>
                            </ul>
                        </li>
                        <!-- LOGOUT BTN -->
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2" href="#" data-bs-toggle="collapse" data-bs-target="#logoutSubMenu" aria-expand="false" aria-controls="logoutSubMenu">Logout</a>
                            <ul id="logoutSubMenu" class="collapse list-unstyled mb-0">
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-4 py-2" >Link 1</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-4 py-2">Link 2</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link px-4 py-2">Link 3</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <!-- LINKS ARE ABOVE -->
                </div>

                <%-- NAVIGATION BAR END --%>
                <%-- MAIN CONTENT START --%>
                <div class="w-100" style="height: 100vh;overflow-y: scroll;">
                    <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                    </asp:ContentPlaceHolder>
                </div>

                <%-- MAIN CONTENT START --%>
            </div>


        </div>
    </form>

    <%-- BOOTSTRAP 5 SCRIPT CDN --%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        $(document).ready(function () {

            // SIDE NAVIGATION BAR TOGGLE LOGIC START

            $("#menu_icon").click(function () {
                $(".side_nav").toggleClass("side_nav_toggle");
            });

            // SIDE NAVIGATION BAR TOGGLE LOGIC START

        });

    </script>
</body>
</html>
